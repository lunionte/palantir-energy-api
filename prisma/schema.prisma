generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}


model Funcionario {
  id           String    @id @map("_id") @default(auto()) @db.ObjectId
  nome         String
  email        String    @unique
  senhaHash    String
  status       StatusFuncionario  @default(DISPONIVEL)
  criadoEm     DateTime  @default(now())
  atualizadoEm DateTime  @updatedAt
  mediaDuracaoSegundos Float @default(0)

  ligacoes     Ligacao[] @relation("FuncionarioLigacoes")
}

model Ligacao {
  id             String    @id @map("_id") @default(auto()) @db.ObjectId
  funcionarioId  String    @db.ObjectId
  clienteTelefone String
  status         StatusLigacao @default(INICIADA)
  inicio         DateTime @default(now())
  fim            DateTime?
  duracaoSegundos Int?

  funcionario    Funcionario @relation("FuncionarioLigacoes", fields: [funcionarioId], references: [id])
}

enum StatusFuncionario {
  DISPONIVEL
  EM_LIGACAO
  OFFLINE
}

enum StatusLigacao {
  INICIADA
  FINALIZADA
  PERDIDA
}
